{
  "name": "zentao-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zentao-mcp": "dist/bundle.cjs"
  },
  "files": [
    "dist",
    "README.md",
    "env.example"
  ],
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --target=node18 --outfile=dist/bundle.cjs --format=cjs --banner:js=\"#!/usr/bin/env node\"",
    "start": "node dist/bundle.js",
    "dev": "ts-node --esm src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "zentao",
    "bug-tracking",
    "ai-assistant",
    "cursor",
    "model-context-protocol"
  ],
  "author": "FivePointTex",
  "license": "MIT",
  "description": "禅道 MCP Server - 让 AI 助手能够管理禅道中的 Bug、需求和测试用例",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tytt/zentao-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.13.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^25.0.9",
    "esbuild": "^0.27.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
